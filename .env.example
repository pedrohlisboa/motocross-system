# Example environment configuration
# Copy this file to .env and update with your settings

# Database
DATABASE_URL=sqlite:///./motocross.db
# For PostgreSQL: postgresql://user:password@localhost/motocross_db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# RFID Reader Configuration
# Serial Reader
RFID_SERIAL_PORT=/dev/ttyUSB0
RFID_SERIAL_BAUDRATE=115200

# TCP/IP Reader
RFID_TCPIP_HOST=192.168.1.100
RFID_TCPIP_PORT=6000

# Wiegand Reader (GPIO pins for Raspberry Pi)
RFID_WIEGAND_D0_PIN=17
RFID_WIEGAND_D1_PIN=18
RFID_WIEGAND_FORMAT=26

# Anti-bounce time (seconds)
RFID_ANTI_BOUNCE_TIME=2.0

# Logging
LOG_LEVEL=INFO
